{% extends "::base.html.twig" %}


{% block body %}
<!-- SECTION -->
<!--===============================================================-->
<div class="section-heading-page mb-0">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h1 class="heading-page text-center-xs">jouer le niveaus</h1>
            </div>
        </div>
    </div>
</div>
<!--===============================================================-->
    <div class="section section-sm section-both">
        <div class="container">
            <div class="row">

                <div id="success" class="mt-40">
                    <div class="icon-box bordered">
                        <i class="fa fa-check fa-round fa-4x text-theme"></i>
                        <h3 class="lead text-theme">Your message was successfully sent!</h3>
                    </div>
                </div>

                <div id="error" class="mt-40">
                    <div class="icon-box bordered">
                        <i class="fa fa-lock fa-round fa-4x text-theme"></i>
                        <h3 class="lead text-theme">Something went wrong, try refreshing and submitting the form again.</h3>
                    </div>
                </div>

                <div class="col-md-5">
                    <h3 class="title-md text-theme hr-left">Questionaire</h3>

                    <form class="form-bg text-theme" id="questionnaires" name="questionnaire" method="post" action="{{ path('jeu_result', {'id': video.id}) }}">
                    {% set id = 0 %}
                    {% for question in questions %}
                        {% set id = id + 1 %}
                        <div class="form-group">
                            <label for="question">Question {{ id }}:
                                {{ question.quest }} ? ({{ question.score }} pts)
                            </label>
                            <br>
                            {% for response in answerResponse[question.id] %}
                            <label for="response">
                                <input type="radio" id="responseChoice_{{ question.id }}" name="{{ question.id }}" value="{{ response.id }}">
                                <label for="responseChoice_{{ question.id }}">{{ response.text }}</label>
                            </label>&nbsp;&nbsp;
                            {% endfor %}
                        </div>
                    {% endfor %}
                        <button >Valider</button>
                    </form>
                </div>
                <div class="col-md-7">
                    {{ video.video()|raw }}
                </div>
        </div>

    </div>










{% endblock %}