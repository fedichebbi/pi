{% extends 'base.html.twig' %}
{% block body %}
    <script src="{{ asset("ckeditor/ckeditor/ckeditor.js") }}"></script>
    <br>
    <ul>
        <li>
            <a class="btn btn-orange" href="{{ path('topic_index') }}">Retour</a>
        </li>
    </ul>
    <div class="panel panel-light text-theme">
        <div class="panel-heading">
            <h3 class="panel-title">Basic Form</h3>
        </div>
        <div class="panel-body">
            <form method="post">
                <div class="form-group">
                    <label for="inputEmail">Titre</label>
                    <input class="form-control" id="titre" placeholder="Titre" name="titre">
                </div>
                <div class="form-group">
                    <label for="inputEmail">Sujet</label>
                    <input class="form-control" id="type" placeholder="Type" name="type">
                </div>
                <div>
                    <label for="inputEmail">Contenu</label>
                    <textarea class="ckeditor" id="contenu" name="contenu"></textarea>
                </div>
                <br/>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>

{% endblock %}
