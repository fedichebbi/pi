{% extends "::baseExpert.html.twig" %}

{% block title %}PiBundle:ConseilE:ajouterConseil{% endblock %}

{% block body %}
<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">Ajouter nouveau Conseil</li>
</ol>
<!-- Example DataTables Card-->
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-pagelines"></i>Conseils</div>
    <div class="card-body">
        <form method="post">
            <div class="form-row">
                <div class="col-md-4 mb-3">
                    <label >Categorie</label>
                    <select class="custom-select" name="categorie" required>
                    <option value="pediatre">pediatre</option>
                    <option value="nutritionniste">nutritionniste</option>
                    <option value="gynecologue">gynecologue</option>
                    <option value="sexologue">sexologue</option>
                    <option value="psychologue">psychologue</option>


                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-4 mb-3">
                    <label >Titre</label>
                    <input type="text" class="form-control " name="titre"  placeholder="Titre"  required>

                </div>
            </div>


            <div class="form-group">


                <div class="form-group">
                    <label >Contenu</label>
                    <div class="input-group">

                        <textarea class="form-control" name="contenu" placeholder="Ecrire votre conseil ici..." rows="5"></textarea>

                    </div>
                </div>
            </div>



            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#AjouterModal">
                Ajouter
            </button>
            <a href="{{ path('liste_articleAdmin') }}"><input class="btn btn-secondary" type="button" value="Annuler"></a>
            <!-- Modal -->

            <div class="modal fade" id="AjouterModal" tabindex="-1" role="dialog" aria-labelledby="AjouterModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="AjouterModalLabel">Modifier cet article?</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Voulez vous Ajouter cet article?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                            <button type="submit" class="btn btn-primary" >Valider</button>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

{% endblock %}
