{% extends "::baseAdmin.html.twig" %}


{% block body %}

    <!-- Example DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i>Liste des Conseils
        </div>

        <div class="card-body">

            <div class="table-responsive">


                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>Expert</th>
                                <th>Titre</th>
                                <th>Contenu</th>
                                <th>Details</th>
                            </tr>
                            </thead>
                            <tfoot>
                            <tr>
                                <th>Expert</th>
                                <th>Titre</th>
                                <th>Contenu</th>
                               <th>Details</th>
                            </tr>
                            </tfoot>
                            <tbody>
                            {% for conseil in pagination %}
                                <tr>
                                    <td>{{ conseil.categorie }}</td>
                                    <td>{{ conseil.titre }}</td>
                                    <td>Pour voir le contenu cliquer detail</td>


                                    <td><a class="btn btn-primary"  href="{{  path('details_conseilAdmin',{'titre':conseil.titre,'contenu':conseil.contenu})}}">detail</a></td>

                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                <div class="pagination justify-content-center">

                    <div class="page-item">
                        {{ knp_pagination_render(pagination) }}</div>

                </div>
                    </div>

                </div>
            </div>

        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>


{% endblock %}