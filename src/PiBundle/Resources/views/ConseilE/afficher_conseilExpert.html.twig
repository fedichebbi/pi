{% extends "::baseExpert.html.twig" %}


{% block body %}
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Tables</li>
    </ol>
    <!-- Example DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i>Liste des Conseils
        </div>

        <div class="card-body">

            <div class="table-responsive">


                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>Categorie</th>
                                <th>Titre</th>
                                <th>Contenu</th>
                                <th>Details</th>
                                <th>Modifier</th>
                                <th>Supprimer</th>
                            </tr>
                            </thead>
                            <tfoot>
                            <tr>
                                <th>Categorie</th>
                                <th>Titre</th>
                                <th>Contenu</th>
                                <th>Details</th>
                                <th>Modifier</th>
                                <th>Supprimer</th>
                            </tr>
                            </tfoot>
                            <tbody>
                            {% for conseil in pagination %}
                                <tr>
                                    <td>{{ conseil.categorie }}</td>
                                    <td>{{ conseil.titre }}</td>
                                    <td>Pour voir le contenu cliquer sur detail</td>

                                    <td>
                                        <a class="btn btn-primary"  href="{{  path('details_conseilExpert',{'titre':conseil.titre,'contenu':conseil.contenu})}}">detail</a>
                                    </td>
                                    <td>
                                        <a href="{{ path('modifier_conseil',{'id':conseil.idConseil}) }}"><input class="btn btn-primary btn-block" type="button" value="Modifier"></a>
                                    </td>
                                    <!-- Button trigger modal -->
                                    <td>
                                        <button type="button" class="btn btn-primary danger" data-toggle="modal" data-target="#supprimerModal">
                                        Supprimer
                                    </button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="supprimerModal" tabindex="-1" role="dialog" aria-labelledby="supprimerModalLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="supprimerModalLabel">Supprimer ce conseil?</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    Voulez vous Supprimer ce conseil?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                                    <a href="{{ path('supprimer_conseil',{'id':conseil.idConseil}) }}">
                                                        <input class="btn btn-primary " type="button" value="Supprimer">
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    </td>



                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                <div class="pagination justify-content-center">

                    <div class="page-item">
                        {{ knp_pagination_render(pagination) }}</div>

                </div>

                    </div>

                </div>
            </div>

        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>


{% endblock %}