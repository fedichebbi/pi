{% extends 'base.html.twig' %}

{% block body %}
    <h1>Topic</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ topic.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ topic.titre }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ topic.type }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ topic.contenu }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if topic.date %}{{ topic.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('topic_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('topic_edit', { 'id': topic.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
