{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <h1>Promotion</h1>




    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ promotion.id }}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if promotion.dateFin %}{{ promotion.dateFin|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Nouvprix</th>
                <td>{{ promotion.nouvPrix }}</td>
            </tr>
            <tr>
                <th>Remise</th>
                <td>{{ promotion.remise }}</td>
            </tr>
            <tr>
                <th>Produit</th>
                <td>{{ promotion.Produit.nom }}</td>
            </tr>

        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('promotion_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('promotion_edit', { 'id': promotion.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
