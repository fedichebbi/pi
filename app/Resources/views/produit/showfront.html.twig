{% extends 'base.html.twig' %}

{% block body %}
    <h1>Produit</h1>
<div style="margin-left: 800px">{{ twitterButton() }}</div>
    <table>
        <tbody>
        <tr>
            <th>Designation</th>
            <td>{{ produit.designation }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ produit.nom }}</td>
        </tr>
        <tr>
            <th>Categorie</th>
            <td>{{ produit.categorie }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ produit.prix }}</td>
        </tr>
        <tr>
            <th>Marque</th>
            <td>{{ produit.marque }}</td>
        </tr>
        <tr>
            <th>Fournisseur</th>
            <td>{{ produit.fournisseur }}</td>
        </tr>
        <tr>
            <th>Note</th>
            <td>{{ produit.note }}</td>
        </tr>
       
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('produit_indexfront') }}">Back to the list</a>
        </li>


    </ul>

{% endblock %}
